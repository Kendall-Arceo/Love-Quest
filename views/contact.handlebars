    <div class="container">
        <div class="row chatFunction">
            <div class="col-md-6" id="form_container">
                <div class="card-body buttonForms">
                    <h1>Contact Us</h1>
                    <p> Please send your message below.</p>
                    <form role="form" method="post" id="reused_form">
                        <div class="row">
                            <div class="col-sm-12 form-group">
                                <label for="message"> Message:</label>
                                <textarea class="form-control" type="textarea" id="message" name="message"
                                    maxlength="6000" rows="7"></textarea>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6 form-group">
                                <label for="name"> Your Name:</label>
                                <input type="text" class="form-control" id="name" name="name" required>
                            </div>
                            <div class="col-sm-6 form-group">
                                <label for="email"> Email:</label>
                                <input type="email" class="form-control" id="email" name="email" required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12 form-group">
                                <button type="submit" class="btn btn-lg btn-default pull-right sendContact">Send &rarr;</button>
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>

